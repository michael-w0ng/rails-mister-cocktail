<div>
    <h1 class="title">Check out this great Cocktail!</h1>
    <h3 class="drink"><%= @cocktail.name %></h3>

    <h4>Make one!</h4>
    <div class="ingredients_list">
      <% @cocktail.doses.each do |dose| %>
        <p><%= dose.description %> of:</p>
        <ul>
        <li><%= dose.ingredient.name %></li>
        <%= link_to "Delete", dose_path(dose), 
            method: :delete, 
            data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %>
        </ul>
        <p><%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %></p>
      <% end %>
    </div>

    <div class="buttons">
      <div>
        <%= link_to "back to booze", cocktails_path(@cocktail), class: "btn btn-warning" %>
      </div>
      <br>
      <div>
        <%= link_to "add some boozey ingredients", new_cocktail_dose_path(@cocktail.id), class: "btn btn-success" %>
      </div>
    </div>

</div>
